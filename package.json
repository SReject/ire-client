{
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint",
        "build:esm": "esbuild ./index.ts --format=esm --outfile=./dist/index.mjs --packages=external",
        "build:common": "esbuild ./index.ts  --format=cjs --outfile=./dist/index.js --packages=external",
        "build:types": "tsc --emitDeclarationOnly --outDir dist",
        "build": "npm run lint && npm run build:types && npm run build:esm && npm run build:common"
    },
    "exports": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.7.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.14.12",
        "esbuild": "^0.23.0",
        "eslint": "^8.57.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^7.17.0"
    },
    "volta": {
        "node": "20.16.0"
    }
}
